


<!-- This snippet uses Font Awesome 5 Free as a dependency. You can download it at fontawesome.io! -->
<div class="container-fluid mt-0 pt-0">
  <div class="row">
  <div class="col-4">
    <div class="d-flex flex-row my-5">
      <div class="flex-grow-1"><%= image_tag "insulin_logo.svg", alt: "...", style: "max-width: 250px;", class: "img-fluid mb-3"%></div>
      <div>
        <%= link_to unauthenticated_root_path do %>
          <i class="fas fa-times" style="font-size: 42px; color: #4F4F4F;"></i>
        <% end %>
      </div>
    </div>
    <div class="mt-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs mt-3">
          <%= f.input :email,
                      label: "Adresse e-mail",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, class: "form-control", label_html: {class: "field-title"} %>
          <%= f.input :password,
                      label: "Mot de passe",
                      required: false,
                      input_html: { autocomplete: "current-password" }, class: "form-control", label_html: {class: "field-title"} %>
          <%= f.input :remember_me,
                      label: "Se souvenir de moi",
                      as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Se Connecter", class: 'btn-primary', style: 'text-transform: uppercase; font-weight: bold;' %>
        </div>
      <% end %>
    </div>
  </div>
    <div class="col-8 mr-0 pr-0">
      <%= image_tag "medic3.svg", id: "login", class:"w-100" %>
    </div>
  </div>
</div>
