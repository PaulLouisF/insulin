<div class="container-fluid" style="height: 100vh;">
  <div class="d-flex flex-row">
    <h1 class="flex-grow-1 font-weight-bold">Mes Patients</h1>
    <button id="nav-new" class="btn-primary btn-new">Ajouter un patient</button>
  </div>
  <section class="last-patients pt-3">
    <h2>Mes derniers patients consultés</h2>

    <div class="d-flex flex-row justify-content-center mt-4">
      <div class="patient-card"></div>
      <div class="patient-card"></div>
      <div class="patient-card"></div>
    </div>

  </section>
  <section class="patients pt-4">
    <h2>Tous mes patients</h2>
    <table class="table table-hover mt-3">
      <thead class="thead-dark">
        <tr>
          <th class="align-middle" scope="col">#</th>
          <th class="align-middle" scope="col">Prénom</th>
          <th class="align-middle" scope="col">Nom</th>
          <th class="align-middle" scope="col">Date de<br>naissance</th>
          <th class="align-middle" scope="col">Sexe</th>
          <th class="align-middle" scope="col">Dernière<br>consultation</th>
          <th class="align-middle" scope="col">Ticket<br>à traiter</th>
          <th class="align-middle" scope="col">Suivi<br>depuis le</th>
        </tr>
      </thead>
      <tbody>
        <% @patients.each do |patient| %>
        <tr>
          <th scope="row"><%= link_to patient_consultations_path(patient) do %><%= patient.id %><% end %></th>
          <td><%= patient.first_name %></td>
          <td><%= patient.last_name %></td>
          <td><%= patient.birthdate %></td>
          <td><%= patient.gender %></td>
          <td></td>
          <td></td>
          <td><%= patient.created_at %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
