<div class="container-fluid" style="height: 100vh;">
  <div class="d-flex flex-row pt-3">
    <h1 class="flex-grow-1">Mes patients</h1>
    <%= link_to("Nouveau Patient", mypatients_new_path, class: "btn-primary btn-new", style: "text-decoration: none;", role: "button") %>
    <%# <button id="nav-new" class="btn-primary btn-new">Ajouter un patient</button> %>
  </div>
  <section class="last-patients pt-3">
    <h2>Mes derniers patients consultés</h2>
      <% if @last.empty? %>
      <div class="d-flex flex-row justify-content-start mt-4">
        <h3>Vous n'avez consulté aucun patient</h3>
      </div>
      <% elsif @last.size <= 2 %>
        <div class="d-flex flex-row justify-content-start mt-4">
          <% @last.each do |patient| %>
            <div class="patient-card d-flex flex-column justify-content-start">
              <h3><%= patient.first_name %> <%= patient.last_name %></h3>
              <p><%= patient.birthdate %></p>
              <p class="">Dernière consultation le<br><%= patient.consultations.last.created_at.strftime('%d/%m/%Y %H:%M') %></p>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="d-flex flex-row justify-content-between mt-4">
          <% @last.each do |patient| %>
            <div class="patient-card d-flex flex-column justify-content-between">
              <h3><%= patient.first_name %> <%= patient.last_name %></h3>
              <p><%= patient.birthdate %></p>
              <p class="">Dernière consultation le<br><%= patient.consultations.last.created_at.strftime('%d/%m/%Y %H:%M') %></p>
            </div>
          <% end %>
        </div>
      <% end %>
  </section>
  <section class="patients pt-4">
    <h2>Tous mes patients</h2>

    <%= simple_form_for :search, url: mypatients_searchresult_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :searchedword, placeholder: "Nom, prénom, âge...", label: false %>   
      <%= f.submit "rechercher", class: "btn-primary btn-new" %>
    <% end %>

    <table class="table table-hover mt-3">
      <thead>
        <tr>
          <th class="align-middle text-center mx-0 px-0" scope="col"><i class="git fas fa-user" style="font-size: 20px; color: #ffffff;"></i></th>
          <th class="align-middle" scope="col">Prénom</th>
          <th class="align-middle" scope="col">Nom</th>
          <th class="align-middle" scope="col">Âge</th>
          <th class="align-middle" scope="col">Sexe</th>
          <th class="align-middle" scope="col">Dernière consultation</th>
          <th class="align-middle" scope="col">Ticket</th>
          <th class="align-middle" scope="col">Suivi depuis</th>
        </tr>
      </thead>
      <tbody>
        <% @patients.each_with_index do |patient, index| %>
          <tr class="" data-href="<%= patient_consultations_path(patient) %>">
            <td class="avatar-placeholder p-1 text-center"><%= image_tag "https://source.unsplash.com/random/4#{index}x4#{index}", class: "avatar-square"%></th>
            <td><%= patient.first_name %></td>
            <td><%= patient.last_name %></td>
            <td><%= patient.age %></td>
            <td><%= patient.gender %></td>
            <td><%= patient.consultations.last.nil? ? "Aucune consultation" : patient.consultations.last.created_at.strftime('%d/%m/%Y') %></td>
            <td></td>
            <td><%= patient.created_at.strftime('%d/%m/%Y') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @patients, list_classes: %w(pagination justify-content-center), previous_label: "", next_label: "" %>
  </section>
</div>
