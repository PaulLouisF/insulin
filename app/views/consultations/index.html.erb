<div class="row no-gutters">
  <div class="col-3 d-flex flex-column">
    <div id="list-example" class="list-group align-self-center w-100">
      <% @consultations.reverse_each.with_index do |consultation, index| %>
        <a class="list-group-item list-group-item-action" href="#list-item-<%= index %>">
          <%#= consultation.created_at.strftime('%d-%m-%Y') %>
          <%= I18n.l(consultation.created_at, format: :short, locale: :'fr-FR') %>
        </a>
      <% end %>
    </div>
  </div>


  <div class="col-9">
    <div data-spy="scroll" data-target="#list-example" data-offset="0" class="scrollspy-example">
      <% @consultations.reverse_each.with_index do |consultation, index| %>
          <h3 class="consultation-card-header" id="list-item-<%= index %>" style="visibility: hidden;">Consultation du <%= I18n.l(consultation.created_at, format: :long, locale: :'fr-FR') %></h3>
          <div class="consultation-card">
            <ul>
              <li><%= "Taille : #{consultation.height}" %></li>
              <li><%= "Poids : #{consultation.weight}"%></li>
              <li><%= "Compte rendu : #{consultation.report}" %></li>
            </ul>
            <!-- Button trigger modal -->
            <button type="button" class="btn-primary btn-new" data-toggle="modal" data-target="#exampleModalCenter">Créer un ticket</button>
            <%= render '/tickets/new', ticket: @ticket, patient: @patient %>

            <div> AFFICHER LES INFOS DU TICKET ICI
              <%#= consultation.tickets.last.question %>
            </div>
          </div>
      <% end %>
    </div>
  </div>

</div>
