<div class="d-flex justify-content-end">
  <%= link_to new_patient_consultation_path do %>
    <button id="nav-new" class="btn-primary btn-new">Ajouter une consultation</button>
  <% end %>
</div>
<hr>
<div class="row">
  <div class="col-4">
    <div id="list-example" class="list-group">
      <% @consultations.reverse_each.with_index do |consultation, index| %>
        <a class="list-group-item list-group-item-action" href="#list-item-<%= index %>"><%= consultation.created_at.strftime('%d-%m-%Y') %> <%= index %></a>
      <% end %>
    </div>
  </div>
  <div class="col-8">
    <div data-spy="scroll" data-target="#list-example" data-offset="0" class="scrollspy-example" style="position: relative; height: 400px; overflow-y: scroll;">
      <% @consultations.reverse_each.with_index do |consultation, index| %>
          <h4 id="list-item-<%= index %>"><%= consultation.created_at.strftime('%d-%m-%Y') %> <%= index %></h4>
          <div class="card" style="height: 300px;">
            <ul>
              <li><%= "Taille : #{consultation.height}" %></li>
              <li><%= "Poids : #{consultation.weight}"%></li>
              <li><%= "Compte rendu : #{consultation.report}" %></li>
              <li><%= link_to "détails", consultation_path(consultation) %></li>
            </ul>

      <!-- Button trigger modal -->
            <button type="button" class="btn-primary btn-new" data-toggle="modal" data-target="#exampleModalCenter">
              Créer un ticket
            </button>

            <%= render '/tickets/new', ticket: @ticket, patient: @patient %>
            <%#= render 'shared/newticket_form' %>

            <% if consultation.tickets.empty? %> 
              <p>
                <i class="fas fa-quote-left"></i>PAS DE TICKETS<i class="fas fa-quote-right"></i>
              </p>
            <% else %>
              <div>
                <div><i class="flex-row fas fa-user-circle"></i>
                <div class="subheader">
                  <%= current_user.first_name %> 
                </div>
                <div class="ticket-question">
                  <div>
                    <i class="fas fa-quote-left"></i> <%= consultation.tickets.last.question %> <i class="fas fa-quote-right"></i>
                  </div>
                </div>
                </div>
              </div>
              <div class="pull-right">
                  <strong class="td">DOCTOR</strong> <small class="pull-right text-muted">
                <p>
                  <i class="fas fa-quote-left"></i>PAS DE TICKETS<i class="fas fa-quote-right"></i>
                </p>
              </div>
            <% end %> 
      <% end %>
    </div>
  </div>

</div>
